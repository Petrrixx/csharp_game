<Window x:Class="GameLauncher.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Game Launcher" Height="400" Width="600">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Border Background="LightGray" Padding="10">
            <StackPanel Orientation="Horizontal">
                <Image Source="Resources/LauncherLogoPlaceholder.txt" Height="40" Margin="0,0,10,0"/>
                <TextBlock Text="Game Launcher" FontSize="24" VerticalAlignment="Center"/>
            </StackPanel>
        </Border>

        <StackPanel Grid.Row="1" Margin="10">
            <Button Content="Start Game" Width="120" Margin="0,10" Command="{Binding StartGameCommand}"/>
            <Button Content="Settings" Width="120" Margin="0,10" Command="{Binding OpenSettingsCommand}"/>
            <Button Content="Key Bindings" Width="120" Margin="0,10" Command="{Binding OpenKeyBindingsCommand}"/>
            <Button Content="Quit" Width="120" Margin="0,10" Command="{Binding QuitCommand}"/>
        </StackPanel>
    </Grid>
</Window>